<?xml version="1.0"?>
<ruleset name="Jezweb PHP Compatibility">
    <description>Check PHP compatibility for WordPress components</description>

    <!-- Use PHPCompatibilityWP ruleset (WordPress-aware) -->
    <rule ref="PHPCompatibilityWP"/>

    <!--
        Upgrade severity for functions removed in PHP 8.0+
        These are marked as "deprecated" warnings but actually cause FATAL errors in PHP 8.0+
    -->
    <rule ref="PHPCompatibility.FunctionUse.RemovedFunctions">
        <type>error</type>
    </rule>

    <!-- Only check PHP files -->
    <arg name="extensions" value="php"/>

    <!-- Show progress and sniff codes -->
    <arg value="sp"/>

    <!-- Exclude common vendor/dependency directories -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/.git/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/cache/*</exclude-pattern>
</ruleset>
